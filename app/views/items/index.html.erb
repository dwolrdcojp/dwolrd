<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <span class="content">
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.content %></td>
        <td><%= item.user.email %></td>
        <td><%= image_tag item.picture.url if item.picture? %></td>
        <td>Posted <%= time_ago_in_words(item.created_at) %> ago.</td>
        </span>
        <span class="timestamp">
        <td><%= link_to 'Show', item %></td>
        <% if item.user == current_user %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, 
                                           data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </span>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Item', new_item_path %>
