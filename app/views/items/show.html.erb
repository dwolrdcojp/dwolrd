<div class="col-md-4">
  <strong>Image</strong><br>
  <% @item.images.each do |item| %>
    <%= image_tag item.url %>
    <% end %>
</div>

<div class="cold-md-4 col-md-offset-7">
  <strong>Title:</strong>
  <%= @item.title %><br>

  <strong>Content:</strong>
  <%= @item.content %><br>

  <strong>User</strong>
  <%= @item.user.username%><br>

  <%= time_ago_in_words(@item.created_at) %> ago<br>
  <br>
  <div class="center">
  <%= link_to "Buy it now", new_item_order_path(@item), class: "btn btn-primary" %>
  </div>
    <% if @item.user == current_user %>
      <%= link_to 'Edit', edit_item_path(@item) %><br>
      <%= link_to 'Destroy', @item, method: :delete, 
                                       data: { confirm: 'Are you sure?' } %>
    <% end %>

  <h2>Comments</h2>
  <%= render 'comments/comment' %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>

  <%= link_to 'Back', items_path %>
</div>